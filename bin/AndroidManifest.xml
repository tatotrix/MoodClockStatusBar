<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.taiguara.smileyclock"
    android:versionCode="1"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        

        <activity
            android:name="br.taiguara.moodclock.MoodClockActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="br.taiguara.moodclock.sobre"
            android:label="@string/title_activity_main" >
            <intent-filter>
	           <action android:name="android.intent.action.VIEW" />
	           <category android:name="android.intent.category.DEFAULT" />
          </intent-filter>
        </activity>
        
        
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposeddescription"
            android:value="Na barra de status, altera a cor, texto, inverte relogio, modifica estilo e tamanho da fonte. - by: Taiguara Duarte" />
        <meta-data
            android:name="xposedminversion"
            android:value="54" />
        
        
    </application>

</manifest>
